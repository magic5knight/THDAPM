@model ProductModel
@{
    ViewData["Title"] = "Create";
}

<h1>Add Product</h1>
<hr>
<div class="row">
    <div class="col-md-10">
        <form asp-action="Create" asp-controller="Product" method="post" enctype="multipart/form-data">
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control">
                </div>
                <span asp-asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Quantity" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Quantity" class="form-control">
                </div>
                <span asp-asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group row">
                <label asp-for="Price" class="col-sm-3 col-form-label"></label>
                <div class="col-sm-6">
                    <input asp-for="Price" class="form-control">
                </div>
                <span asp-asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary">
            </div>
            <a asp-action="Index">Back to List</a>
        </form>
    </div>
</div>